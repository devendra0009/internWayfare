<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    ul {
      display: flex;
      gap: 1rem;
      justify-content: center;
      li {
        list-style: none;
        background-color: lightgreen;

        padding: 0.5rem;
        border-radius: 10px;
      }
    }
    .google-btn {
      background: red;
      padding: 0.5rem;
      border-radius: 10px;
      &:hover {
        scale: 105%;
      }
    }
    main {
      text-align: center;
      img {
        width: 100px;
        height: 100px;
        border-radius: 100%;
      }
    }
    .imgc{
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        button{
            background-color: lightgreen;
            padding: 0.3rem 0.5rem;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            &:hover{
                scale: 105%;
            }
        }
    }
    .imageC{
        display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px; /* Add gap between images */
    overflow-x: auto; 
    }
   
  .imageDetails img {
   
    border-radius: 100%; /* Add border radius for rounded corners */
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Add shadow effect */
  }

  .imageDetails p {
    margin: 5px 0;
  }
  .imgUpload{
    background-color: lightskyblue;
    cursor: pointer;
    border-radius: 10px;
    padding: 0.5rem 0.8rem;
  }
  </style>
  <body>
    <nav>
      <ul>
        <% if(data){%> 
            <li><a href="/auth/logout">Logout</a></li>
            <li><a href="/user/profile">Profile</a></li>
            <li><a href="/">Home</a></li>
          <% } else{%>
            <li><a href="/auth/login">Login</a></li>
          <% }%>
      </ul>
    </nav>
    <main>
      <img  src="<%= data.profileImg %>" alt="<%= data.name %>'s' image" />
      <h1><%= data.name %></h1>
      <input type="file" name="imgUpload" class="imgUpload" id="imgUpload" >
      <h3>Your images collection</h3>
      <div class="imageC">
      <% for(let i=0;i<data.images.length;i++){ %>
        <div class="imageDetails">
          <img id="image<%=i%>" src="<%= data.images[i] %>" alt="<%= data.images %>" />
          <a href="/user/profile/edit-image?img=<%= data.images[i] %>"><p>Edit Image</p></a>
        </div>
        <%}%>
    </div>
    </main>
    <script>
         document
        .getElementById('imgUpload')
        .addEventListener('change', async (e) => {
            const formData = new FormData();
            formData.append('croppedImage', e.target.files[0]);
            // console.log(e.target.files[0]);
            try {
                const response = await fetch(
                  '/user/profile/updateProfileImage',
                  {
                    method: 'PATCH',
                    body: formData,
                  }
                );

                if (response.status === 200) {
                  console.log('Image added successfully');
                  window.location.href = '/user/profile';
                  // Optionally, handle the response or perform additional actions
                } else {
                  console.error('Failed to update image');
                }
              } catch (error) {
                console.error('Error updating image:', error);
              }
        })
    </script>
  </body>
</html>
